import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
	createObjects();
	System.out.println("--- DMST DataBase ---\nAdmin View");
	Scanner scanner= new Scanner(System.in);
	Student student = null;
	
	do{//try to connect
		System.out.print("Name: ");
		String name=scanner.nextLine();
		student = Student.searchStudent(name);//search Student objects by name and return the one with the specific name (if it exists) 
		if(student==null){//no student is found with the specific name
			System.out.println("Wrong name");
		}
		else Admin.getMenu();//if it exists
	}
	while (student==null); //while no student is found with the provided name
}
	

private static void createObjects() {
	Student st1 = new Student ("Giwrgos Iwannou", "giwannou@aueb.gr", "Eleftherias 23", 20, true);
	}
}
